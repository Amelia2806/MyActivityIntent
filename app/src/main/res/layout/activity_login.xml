<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/img_1">

    <!-- TextView untuk judul halaman "Login" -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="29sp"
        android:textStyle="bold"
        android:textColor="#880E4F"
        android:layout_gravity="center"
        android:layout_marginBottom="35dp" />
    <!-- Menempatkan judul di tengah dan memberi jarak bawah 35dp -->

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_edittext"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <!-- Password input dengan ikon kunci di kiri dan ikon visibility di kanan, serta tipe input khusus untuk password -->

    <!-- EditText untuk input username -->
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <!-- Menambahkan ikon di sebelah kiri, padding, dan background yang sudah dibentuk khusus -->

    <!-- Tombol Login -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="#880E4F"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />
    <!-- Tombol login dengan background kustom dan warna teks putih -->

    <!-- LinearLayout untuk bagian "Already Have an Account" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Layout horizontal untuk teks "New member?" dan link "Register" -->

        <!-- TextView untuk "New member?" -->
        <TextView
            android:id="@+id/tvNewMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New here? "
            android:textSize="14sp"
            android:textColor="#666666"/>
        <!-- Teks "New member?" dengan warna abu-abu -->

        <!-- TextView untuk "Register" -->
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="14sp"
            android:textColor="#3B82F6"
            android:textStyle="bold"/>
        <!-- Teks "Register" dengan warna biru dan huruf tebal -->

    </LinearLayout>

</LinearLayout>
